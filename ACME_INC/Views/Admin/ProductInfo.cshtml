@{
    ViewBag.Title = "Product Info";
}

<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 50%;
    }
</style>

@foreach (var p in ViewBag.Products)
{
    <h2 style="text-align:center">Product Info</h2>

    <br />

    <img src="@p.ProductImageURL" height="300" width="600" class="center" />

    <br />

    <p style="font-size:large"><strong>Name:</strong> @p.ProductName</p>

    <br />

    <p style="font-size:large"><strong>Description:</strong> @p.ProductDesc</p>

    <br />

    <p style="font-size:large"><strong>Price:</strong> R @Math.Round(Convert.ToDouble(p.ProductPrice), 2)</p>

    <form method="post">
        <button class="btn btn-default" asp-action="StoreContent">Back to Home Page</button>
    </form>  
}


